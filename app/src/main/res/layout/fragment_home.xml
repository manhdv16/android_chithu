<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@color/blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUẢN LÍ CHI TIÊU"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:id="@+id/lnDate"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/teal_200"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_calendar"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2024-05"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvSodu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1.000.000đ"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu: "
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tvChitieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -6.434.000đ"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập: "
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tvThunhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +7.434.000đ"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_rounded"
        android:layout_marginTop="-10dp"
        >
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_margin="10dp" />


</LinearLayout>
